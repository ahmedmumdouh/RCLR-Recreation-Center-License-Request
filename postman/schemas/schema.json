        "/rclruplaoddocuments": {
            "post": {
                "tags": [
                    "admins"
                ],
                "summary": "uplaod 12 documents related to the request submission or update",
                "description": "plaod 12 documents related to the request submission or update",
                "operationId": "rclruplaoddocuments",
                "consumes": [
                    "based on uploaded file type (application/pdf, image/png ....)"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Appian-Document-Name",
                        "in": "header",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "RequestId",
                        "in": "query",
                        "required": true,
                        "type": "integer",
                        "minimum": 1
                    },
                    {
                        "name": "DocumentType",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "enum": [
                            "National Address Subscription Certificate",
                            "Logo",
                            "Trademark registration certificate",
                            "Recreation center operating plan",
                            "general site map",
                            "3D engineering drawing",
                            "Recreation center map",
                            "Training plan for operators",
                            "Civil Defense Certificate",
                            "Visitor entry and exit mechanism",
                            "Crowd management map",
                            "Other"
                        ]
                    },
                    {
                        "name": "Appian-API-Key",
                        "in": "header",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "document",
                        "description": "document to be uploaded in binary representation",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "binary",
                            "example": "document"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "document uploaded to Appian Successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "DocumentId": {
                                    "type": "integer",
                                    "minimum": 1,
                                    "example": 1923
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "400 Bad Request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "internal error in Appian System",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Response": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
